<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transactions_data_view"
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:background="@color/fromvpn_secondary_background_color">
        <GridLayout
            android:id="@+id/data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:rowCount="6"
            android:paddingStart="10sp"
            android:paddingEnd="10sp">
            <TextView
                android:id="@+id/phone_number_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/fromvpn_main_font_color"
                tools:text="Número de teléfono: 5354650330"/>
            <TextView
                android:id="@+id/transaction_id_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/fromvpn_main_font_color"
                tools:text="Nro.Transaccion: AY3004JQST999"/>
            <TextView
                android:id="@+id/date_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/fromvpn_main_font_color"
                tools:text="Fecha: 31/12/2023 5:30 PM"/>
            <TextView
                android:id="@+id/amount_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginBottom="10sp"
                android:textColor="@color/fromvpn_main_font_color"
                android:textSize="18sp"
                tools:text="Monto: 300 CUP" />
            <TextView
                android:id="@+id/beneficiary_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:textColor="@color/fromvpn_main_font_color"
                android:textSize="18sp"
                tools:text="Beneficiario: 1111222233334444"/>
        </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="11sp"
            android:background="@color/fromvpn_panels_background_colors"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>